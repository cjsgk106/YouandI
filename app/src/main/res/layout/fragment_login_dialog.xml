<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:scaleType="center"
        android:text="Account Information"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/fragment_login_dialog_textview_name_textcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/20"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:textAlignment="textEnd" />

    <EditText
        android:id="@+id/fragment_login_dialog_edittext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:maxLength="20"
        android:hint="Enter your name" />

    <TextView
        android:id="@+id/fragment_login_dialog_textview_email_textcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/20"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:textAlignment="textEnd" />

    <EditText
        android:id="@+id/fragment_login_dialog_edittext_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:maxLength="100"
        android:hint="Enter your partner's email address" />

    <Button
        android:id="@+id/fragment_login_dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK" />

</LinearLayout>